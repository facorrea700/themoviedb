<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/accountSettingsFragment"
        android:name="com.example.themoviedb.user.AccountSettingsFragment"
        android:label="fragment_account_settings"
        tools:layout="@layout/fragment_account_settings" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.themoviedb.user.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.themoviedb.user.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_home"
            app:destination="@id/home" />
        <argument
            android:name="mail"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
        <action
            android:id="@+id/action_loginFragment_to_popularMovies"
            app:destination="@id/popularMovies" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="com.example.themoviedb.movies.Home"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" />
    <fragment
        android:id="@+id/popularMovies"
        android:name="com.example.themoviedb.movies.PopularMovies"
        android:label="fragment_popular_movies_list"
        tools:layout="@layout/fragment_popular_movies_list" />
</navigation>